<% include ../partials/header %>

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to Budgets!</h1>
        <p>Create, compare, and analyze your budgets.</p>
        <p>
            <a class="btn btn-primary btn-large" href="/budgets/new">Add a New Budget</a>
        </p>
    </div>
</header>

<div class="row" style="display:flex; flex-wrap: wrap;">
    <div class="col-lg-12">
        <h3>Current Budgets</h3>
    </div>
    <% budgets.forEach((budgets) => { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <h4>
                    <%= budgets.name %>
                </h4>
                <p>
                    <a href="/budgets/<%= budgets._id%>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <% }); %>
</div>

<% include ../partials/footer %>