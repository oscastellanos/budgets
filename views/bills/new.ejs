<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Create a New Bill to the <%= budget.name %> Budget</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/budgets/<%= budget._id %>/bills" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="bill[name]" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="bill[amount]" placeholder="amount">    
            </div>
            <div class="form-group">
                    <input class="form-control" type="text" name="bill[category]" placeholder="category">    
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href='/budgets'>View the budgets!</a> 
    </div>
    
</div>


<% include ../partials/footer %>