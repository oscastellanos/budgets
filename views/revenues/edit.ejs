<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Edit Revenue</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/dashboard/<%= currentUser_id %>/revenues/<%= revenue._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="revenue[name]" value="<%= revenue.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="revenue[amount]" value="<%= revenue.amount%>">    
            </div>
            <div class="form-group">
                    <input class="form-control" type="text" name="revenue[category]" value="<%= revenue.category%>">    
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href='/dashboard'>View your dashboard!</a> 
    </div>
    
</div>


<% include ../partials/footer %>